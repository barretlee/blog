/* plain text */
.pln {
  color: #2f1e2e;
}

@media screen {
  /* string content */
  .str {
    color: #48b685;
  }

  /* a keyword */
  .kwd {
    color: #815ba4;
  }

  /* a comment */
  .com {
    color: #8d8687;
  }

  /* a type name */
  .typ {
    color: #06b6ef;
  }

  /* a literal value */
  .lit {
    color: #f99b15;
  }

  /* punctuation */
  .pun {
    color: #2f1e2e;
  }

  /* lisp open bracket */
  .opn {
    color: #2f1e2e;
  }

  /* lisp close bracket */
  .clo {
    color: #2f1e2e;
  }

  /* a markup tag name */
  .tag {
    color: #ef6155;
  }

  /* a markup attribute name */
  .atn {
    color: #f99b15;
  }

  /* a markup attribute value */
  .atv {
    color: #5bc4bf;
  }

  /* a declaration */
  .dec {
    color: #f99b15;
  }

  /* a variable name */
  .var {
    color: #ef6155;
  }

  /* a function name */
  .fun {
    color: #06b6ef;
  }
}
/* Use higher contrast and text-weight for printable form. */
@media print, projection {
  .str {
    color: #006600;
  }

  .kwd {
    color: #006;
    font-weight: bold;
  }

  .com {
    color: #600;
    font-style: italic;
  }

  .typ {
    color: #404;
    font-weight: bold;
  }

  .lit {
    color: #004444;
  }

  .pun, .opn, .clo {
    color: #444400;
  }

  .tag {
    color: #006;
    font-weight: bold;
  }

  .atn {
    color: #440044;
  }

  .atv {
    color: #006600;
  }
}
/* Style */
.highlight {
  font-family: monospace, Consolas, "Courier New";
  background: #f8f8f8;
  padding: 10px 40px;
  overflow-x: auto;
  border: 1px solid #CCC;
  border-width: 1px 0;
  margin-left: -40px;
  margin-right: -40px;
}
/* Specify class=linenums on a pre to get line numbering */
ol.linenums {
  margin-top: 0;
  margin-bottom: 0;
}

/* IE indents via margin-left */
